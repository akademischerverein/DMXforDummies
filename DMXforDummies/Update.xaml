<Window x:Class="DMXforDummies.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMXforDummies"
        mc:Ignorable="d"
        Title="Aktualisiere..." Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Aktualisiere DMXforDummies..." FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center" />
            <ProgressBar x:Name="UpdateProgressbar" Height="20" Minimum="0" Maximum="100" Value="0" />
        </StackPanel>
    </Grid>
</Window>
